---
import Layout from '../layouts/Layout.astro';
import AssessmentForm from '../components/AssessmentForm';
import logo from '../assets/V_Blanco_verde.png';
---

<Layout title="Valoración Física - Gimnasio">
	<nav class="bg-gradient-to-r from-green-100 to-green-800 shadow-lg">
		<div class="container mx-auto px-4 py-3">
			<a href="/" class="inline-block transition-transform hover:scale-105">
				<img src={logo.src} alt="Volver al Inicio" class="h-12 md:h-16 w-auto object-contain" />
			</a>
		</div>
	</nav>

	<main class="container mx-auto px-4 py-8">
		<header class="text-center mb-10">
			<h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">Informe de Valoración Física</h1>
			<p class="text-gray-600">Completa el formulario para generar tu informe personalizado</p>
		</header>
		
		<AssessmentForm client:only="react" />
	</main>
</Layout>
