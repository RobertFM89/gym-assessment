---
import Layout from '../layouts/Layout.astro';
import logo from '../assets/V_Blanco_verde.png';
---

<Layout title="Bienvenido - Valoración Física">
	<main class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-green-600 to-green-800 px-4">
		<div class="text-center p-4 md:p-8">
			<div class="mb-8 md:mb-12 p-6 md:p-12 rounded-full bg-white/70 backdrop-blur-sm inline-block">
				<img src={logo.src} alt="Logo Gimnasio" class="w-32 h-32 md:w-48 md:h-48 object-contain mx-auto drop-shadow-lg" />
			</div>
			
			<div class="space-y-6">
				<h1 class="text-3xl md:text-5xl font-bold text-white mb-8 tracking-tight">
					Sistema de Valoración Física
				</h1>
				
				<a 
					href="/assessment" 
					class="inline-block bg-white text-green-700 hover:bg-gray-50 hover:text-green-800 font-bold py-3 px-8 md:py-4 md:px-12 rounded-full text-lg md:text-xl transition-all shadow-lg hover:shadow-2xl transform hover:-translate-y-1 border-2 border-transparent hover:border-green-200"
				>
					Comenzar Valoración
				</a>
			</div>
		</div>
	</main>
</Layout>
